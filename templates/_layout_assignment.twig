<!DOCTYPE html>
<html lang="en-US">
<head>
  {% include '_global/head' %}
</head>

<body>
  {% include '_global/header' %}

  <main class="group" role="main" id="content">
    <section class="main-content-area-wide">
    <h1>{{ entry.title }}</h1>
    <dl>
      <dt>Points</dt>
      <dd>{{ entry.points }}</dd>
      <dt>Assigned</dt>
      <dd>{{ entry.assignedDate|date('F d, Y') }}</dd>
      <dt>Due</dt>
      <dd>{{ entry.dueDate|date('F d, Y') }}</dd>
    </dl>
    <hr>
    {% block content %}
    {% endblock %}
    <a class="button small" href="{{ craft.entries.section('assignmentLists').relatedTo(craft.categories.group('assignmentTypes').relatedTo(entry).one()).one().url }}">Return to Assignments</a>
    </section>
  </main>
    
  {% include '_global/footer' %}

  {# google fonts #}
  <link href="https://fonts.googleapis.com/css?family=Droid+Sans|Oswald" rel="stylesheet">

