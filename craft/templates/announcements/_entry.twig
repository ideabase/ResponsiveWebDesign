{% extends '_layout_post' %}
{% block content %}
  {{ entry.intro }}
  {% for block in entry.announcement.all() %}
    {% switch block.type %}
      {% case "body" %}
        {{ block.body }}
      {% case "button" %}
        <p><a href="{{ block.buttonUrl }}" class="small button">{{ block.text }}</a></p>
      {% case "hr" %}
        <hr>
    {% endswitch %}
  {% endfor %}
{% endblock %}
