{% extends '_layout_wide' %}
{% block content %}
  <h1>{{ entry.heading }}</h1>
  <p class="section-introduction">{{ entry.subheading }}</p>
  <ul style="list-style-type:none !important">
    {% for course in craft.entries.section('courses').all() %}
      {% set calendar = craft.entries.section('calendars').relatedTo(course).one() %}
      <a class="small button" href="{{ calendar.url }}">{{ calendar.title }}</a>
    {% endfor %}
  </ul>
{% endblock %}
